@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<html>
<head>
    <title>My eCard</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>


<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                @******************CAROUSEL START********************************@
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                        <li data-target="#myCarousel" data-slide-to="4"></li>
                        <li data-target="#myCarousel" data-slide-to="5"></li>
                        <li data-target="#myCarousel" data-slide-to="6"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_anniversary.png" alt="Pic of anniversary frame" /></a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_babyshower.png" alt="Pic of babyshower frame" /></a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_birthday.png" alt="Pic of birthday frame" /></a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_valentines.png" alt="Pic of valentines frame" /></a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_frame_black.png" alt="Pic of black frame" /></a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_frame_gold.png" alt="Pic of gold frame" /></a>
                        </div>

                        <div class="item" data-interval="800000">
                            <a href="" target="_blank"><img src="~/images/card_frame_wood.png" alt="Pic of wood frame" /></a>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                @******************CAROUSEL END ********************************@

            </div>

            <div class="col-sm-6">
                @******************GRID START********************************@

                @******************GRID END ********************************@

            </div>
        </div>
    </div>


    <!-- START CODE FOR SCRIPT -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <!-- END CODE FOR SCRIPT  -->

</body>

</html>